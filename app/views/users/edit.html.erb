<%= form_for(@user) do |f| %>
  <%= render 'error_messages' %>
  <%= f.label 'Your username:' %>
  <%= f.text_field :username, placeholder: 'my_username' %><br>
  <%= f.label 'Email:' %>
  <%= f.email_field :email, placeholder: 'my_email@example.com' %><br>
  <%= f.label 'New password:' %>
